class Solution {
    public int countTestedDevices(int[] batteryPercentages) {
        int ans = 0;
        int decrease = 0;
        for (int i = 0; i < batteryPercentages.length; i++) {
            if (batteryPercentages[i] + decrease > 0) {
                ans++;
                decrease--;
            }
        }
        return ans;
    }
}
